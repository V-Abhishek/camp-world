<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <h1 class="center-heading">Add New Camping Site</h1>
        <div class="center-form">
            <form action="/camp-grounds" method="post">
                <div class="form-group">
                    <label>
                        Campsite Name
                    </label>
                    <input class="form-control" type="text" name="siteName" placeholder="Enter site name" required>
                </div>
                <div class="form-group">
                    <label>
                        Campsite Description
                    </label>
                    <input class="form-control" type="text" name="description" placeholder="Enter description" required>
                </div>
                <div class="form-group">
                    <label>
                        Price
                    </label>
                    <input class="form-control" type="number" name="price" placeholder="Enter price per night cost"
                        min="0.01" step="0.01" required>
                </div>
                <div class="form-group">
                    <label>
                        Image Link
                    </label>
                    <input class="form-control" type="text" name="img" placeholder="Enter Image" required>
                </div>
                <button class="btn btn-primary btn-lg btn-block">SUBMIT</button>
            </form>
            <a href="/camp-grounds">Back</a>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>