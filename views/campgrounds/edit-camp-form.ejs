<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <h1 class="center-heading">Update <%= campground["site-name"]%></h1>
        <div class="center-form">
            <form action="/camp-grounds/<%= campground._id%>?_method=PUT" method="post">
                <div class="form-group">
                    <label>
                        Campsite Name
                    </label>
                    <input class="form-control" type="text" name="siteName" value="<%=campground['site-name']%>"
                        required>
                </div>
                <div class="form-group">
                    <label>
                        Campsite Description
                    </label>
                    <input class="form-control" type="text" name="description" value="<%=campground['description']%>"
                        required>
                </div>
                <div class="form-group">
                    <label>
                        Price
                    </label>
                    <input class="form-control" type="number" name="price" value="<%=campground['price']%>" min="0.01"
                        step="0.01" required>
                </div>
                <div class="form-group">
                    <label>
                        Image Link
                    </label>
                    <input class="form-control" type="text" name="img" value="<%=campground['image']%>" required>
                </div>
                <button class="btn btn-primary btn-lg btn-block">SUBMIT</button>
            </form>
            <a href="/camp-grounds">Back</a>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>