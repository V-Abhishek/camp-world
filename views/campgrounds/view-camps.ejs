<%- include("../partials/header") %>
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome To Camp World</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                <a href="/camp-grounds/new" class="btn btn-primary btn-lg">Add New Camping Site</a>
            </p>
        </div>
    </header>
    <div class="row text-center">
        <% data.forEach((campGround)=>{%>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%= campGround.image %>" alt="<%= campGround['site-name']%>">
                <div class="caption">
                    <h3><%= campGround["site-name"] %></h3>
                </div>
                <p>
                    <a href="/camp-grounds/<%=campGround._id %>" class="btn btn-primary">More Info</a>
                </p>
            </div>
        </div>
        <%});%>
    </div>
</div>
<%- include("../partials/footer") %>